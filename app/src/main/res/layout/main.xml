<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/normal_padding"
    android:paddingTop="@dimen/normal_padding"
    android:paddingRight="@dimen/normal_padding"
    android:paddingBottom="@dimen/normal_padding">    <!--start-->
    <LinearLayout
        android:id="@+id/childlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#ffcccccc">
            <!-- line1 -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_margin="0.5dp"
                android:background="#ffcccccc">

                <TextView
                    android:id="@+id/tvStaticInfoLable"
                    android:layout_width="0.0dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="General Information"></TextView>

                <TextView
                    android:id="@+id/tvTimeleaps"
                    android:layout_width="0.0dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="Time:"></TextView>
            </TableRow>
            <!--line2-->
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0.5dp"
                android:background="#ffffcc99">

                <TextView
                    android:id="@+id/tvOperaterName"
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Operater:"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tvRatType"
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="RatType:"
                    android:textSize="12dp" />
            </TableRow>
            <!-- line3 -->
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:background="#ffffcc99">

                <TextView
                    android:id="@+id/tMnc"
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="mnc"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tvMcc"
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="mcc:"
                    android:textSize="12dp"></TextView>
            </TableRow>
            <!--line4-->
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0.5dp"
                android:background="#ffffcc99">

                <TextView
                    android:id="@+id/tvImsi"
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Imsi"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tvLine1Number"
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Number:"
                    android:textSize="12dp" />
            </TableRow>
            <!--line5-->
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0.5dp"
                android:background="#ffffcc99">

                <TextView
                    android:id="@+id/tvDeviceId"
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="DeviceId"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tvSerialNum"
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:layout_weight="1"
                    android:text="SN:"
                    android:textSize="12dp" />
            </TableRow>
            <!--line6-->
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0.5dp"
                android:background="#ffffcc99">

                <TextView
                    android:id="@+id/tvSoftware"
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="software:"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tvModel"
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:layout_weight="1"
                    android:text="Model:"
                    android:textSize="12dp" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="#ffcccccc">
            <!--line6-->
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0.5dp"
                android:background="#ffcccccc">

                <TextView
                    android:id="@+id/tvStaticInfoLable2"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:text="Serving and Neighboring Cells"></TextView>

                <TextView
                    android:id="@+id/tvCellCount"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:text="CellCount:"></TextView>
            </TableRow>
            <!-- title -->
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0.5dp"
                android:background="#ffffcc99">

                <TextView
                    android:id="@+id/tvCellType"
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Type:"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tvTac"
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Tac:"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tvCellId"
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="CI:"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tvPCI"
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="PCI/PSC:"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tvSign"
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="dBm:"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tvasulevel"
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="asulevel:"
                    android:textSize="12dp" />
            </TableRow>
        </TableLayout>
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/myrcv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#ffff0000"
            android:dividerHeight="10dp"
            android:scrollbars="vertical" />
        <!-- history services cell info -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#ffcccccc">

            <TextView
                android:id="@+id/tvStaticInfoLable3"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:text="History Services Cell Information"></TextView>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0.5dp"
                android:background="#ffffcc99">

                <TextView
                    android:id="@+id/tvhistoryCellType"
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Type:"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tvhistoryTac"
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Tac:"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tvhistoryCellId"
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="CI:"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tvhistoryPCI"
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="PCI/PSC:"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tvhistorydBm"
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="dBm:"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tvhistoryasuLevel"
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="asulevel:"
                    android:textSize="12dp" />
            </TableRow>
        </TableLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/historyrcv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#ffff0000"
            android:dividerHeight="10dp"
            android:scrollbars="vertical" />
    </LinearLayout>
</RelativeLayout>
