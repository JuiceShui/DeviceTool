<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_bus"
            style="@style/map_util_text_style"
            android:drawableLeft="@drawable/icon_bus"
            android:text="公交" />

        <TextView
            android:id="@+id/tv_car"
            style="@style/map_util_text_style"
            android:drawableLeft="@drawable/icon_car"
            android:text="汽车" />

        <TextView
            android:id="@+id/tv_walk"
            style="@style/map_util_text_style"
            android:drawableLeft="@drawable/icon_walk"
            android:text="步行" />

        <TextView
            android:id="@+id/tv_eat"
            style="@style/map_util_text_style"
            android:drawableLeft="@drawable/icon_eat"
            android:text="餐饮" />

        <TextView
            android:id="@+id/tv_sleep"
            style="@style/map_util_text_style"
            android:drawableLeft="@drawable/icon_bed"
            android:text="住宿" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>